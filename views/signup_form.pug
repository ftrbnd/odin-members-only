extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text', placeholder='John' name='first_name' value=(undefined===user ? '' : user.first_name))
    div.form-group
      label(for='last_name') Last Name:
      input#last_name.form-control(type='text', placeholder='Doe' name='last_name' value=(undefined===user ? '' : user.last_name))
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='john123' name='username' value=(undefined===user ? '' : user.username))
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', placeholder='Password' name='password' value=(undefined===user ? '' : user.password))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
